@model Web.SitePropriaArte.Models.QuadroModelGaleria
@{
    Layout = "~/Views/Base/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EspacoGaleria</title>
</head>
<body>

    <h3>Cadastro de Quadros</h3>
    <hr />

    @using (Html.BeginForm("CadastrarQuadro", "Quadro", FormMethod.Post))
    {
        <div>
            @Html.ValidationSummary()
        </div>

        @Html.LabelFor(q => q.quadroCadastro.Imagem, new { @class = "control-label col-md-2" })
        @Html.TextBoxFor(q => q.quadroCadastro.Imagem, new { type = "file", @class = "form-control" })
        @Html.ValidationMessageFor(q => q.quadroCadastro.Imagem, "", new { @class = "text-danger" })
        <br /><br />
        @Html.LabelFor(q => q.quadroCadastro.Nome) <br />
        @Html.TextBoxFor(q => q.quadroCadastro.Nome)
        <br /><br />
        @Html.LabelFor(q => q.quadroCadastro.Descricao) <br />
        @Html.TextBoxFor(q => q.quadroCadastro.Descricao)
        <br /><br />
        @Html.LabelFor(q => q.quadroCadastro.DataCriacao) <br />
        @Html.TextBoxFor(q => q.quadroCadastro.DataCriacao)
        <br /><br />
        <input type="submit" value="Cadastrar Quadro" />
        <p>
            @ViewBag.Mensagem
        </p>
    }

    <div>

    </div>
   

    <h3>Exibição de Quadros</h3>
    <hr />
    <table class="table">
        <tr>
            <th>Quadro</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Data de Criação</th>            
        </tr>

    </table>
</body>
</html>
