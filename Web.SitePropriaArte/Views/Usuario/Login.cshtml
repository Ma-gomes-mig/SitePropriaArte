@model Web.SitePropriaArte.Models.UsuarioModelLogin
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <h3>Login de Usuarios</h3>
    @Html.ActionLink("Criar Conta de Usuario", "Cadastro")
    <hr />
    <!-- Formulario para login de usuarios -->
    @using (Html.BeginForm("AutenticarUsuario", "Usuario", FormMethod.Post))
    {
        @Html.LabelFor(u => u.Email) <br />
        @Html.TextBoxFor(u => u.Email)
        @Html.ValidationMessageFor(u => u.Email)
        <br /><br />
        @Html.LabelFor(u => u.Senha) <br />
        @Html.PasswordFor(u => u.Senha)
        @Html.ValidationMessageFor(u => u.Senha)
        <br /><br />
        <input type="submit" value="Acessar Sistema" />
        <p>
            @ViewBag.Mensagem
        </p>
    }
    <div>
        <p>Home</p>
        <p>@Html.ActionLink("Voltar Index", "Index")</p>
    </div>
</body>
</html>