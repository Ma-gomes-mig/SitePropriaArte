@model Web.SitePropriaArte.Models.UsuarioModelCadastro
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastro</title>
</head>
<body>
    <h3>Cadastro de Usuarios</h3>
    @Html.ActionLink("Autenticar Usuario", "Login")
    <hr />
    @using (Html.BeginForm("CadastrarUsuario", "Usuario", FormMethod.Post))
    {
        <div>
            @Html.ValidationSummary()
        </div>
        @Html.LabelFor(u => u.Nome) <br />
        @Html.TextBoxFor(u => u.Nome)
        <br /><br />
        @Html.LabelFor(u => u.Email) <br />
        @Html.TextBoxFor(u => u.Email)
        <br /><br />
        @Html.LabelFor(u => u.Senha) <br />
        @Html.PasswordFor(u => u.Senha)
        <br /><br />
        @Html.LabelFor(u => u.SenhaConfirm) <br />
        @Html.PasswordFor(u => u.SenhaConfirm)
        <br /><br />
        <input type="submit" value="Cadastrar Usuario" />
        <p>
            @ViewBag.Mensagem
        </p>
    }
<div>
    <p>Home</p>
    <p>@Html.ActionLink("Voltar Index", "Index")</p>
</div>
</body>
</html>